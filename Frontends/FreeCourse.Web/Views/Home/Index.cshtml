@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}

<style>
    .card-img-top {
        width: 100%;
        height: 30vh;
        object-fit: contain;
    }
</style>

@model List<CourseViewModel>
<h2>Kurslar</h2>
<hr />
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || count % 3 == 1)
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-4'>")
        }

        <div class="col">
            <div class="card">
                <img src="@item.StockPictureUrl" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.ShortDescription</p>
                    <h4 class="text-primary">@item.Price TL</h4>
                    <a asp-route-id="@item.Id" asp-controller="Home" asp-action="Detail" class="btn btn-success btn-sm">Detay</a>
                </div>
            </div>
        </div>


        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}
